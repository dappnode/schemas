{
  "name": "@dappnode/schemas",
  "type": "module",
  "version": "0.1.2",
  "description": "A shared TypeScript JSON schemas and its validation functions for the manifest and setup wizard dappnode files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "publish": "npm run test && npm run build:webpack && npm version patch && npm publish --access public && git push --follow-tags",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "build:webpack": "npm run clean && webpack --config webpack.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "mocha --config .mocharc.yml test/**/*.test.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dappnode/types.git"
  },
  "keywords": [
    "schemas",
    "dappnode",
    "ethereum"
  ],
  "author": "DAppNode Association <admin@dappnode.io> (https://github.com/dappnode)",
  "contributors": [
    "Pablo Mendez <mendez4a@gmail.com> (https://github.com/pablomendezroyo)"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dappnode/schemas/issues"
  },
  "files": [
    "dist",
    "src/schemas"
  ],
  "devDependencies": {
    "@types/ajv-errors": "^2.0.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "chai": "^4.3.7",
    "eslint": "^8.39.0",
    "eslint-plugin-import": "^2.27.5",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@dappnode/types": "^0.1.7",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0"
  }
}
